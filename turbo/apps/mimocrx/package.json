{
  "name": "mimocrx",
  "displayName": "Mimo Agent",
  "version": "0.1.0",
  "description": "Mimo browser agent",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "package": "plasmo package",
    "lint": "eslint . --max-warnings 0",
    "check-types": "tsc --noEmit"
  },
  "dependencies": {
    "@repo/mimo-utils": "workspace:*",
    "mimo-bus": "workspace:*",
    "mimo-protocol": "workspace:*",
    "plasmo": "^0.89.5"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^4.7.1",
    "@types/chrome": "^0.1.36",
    "@types/node": "^20",
    "eslint": "^9",
    "prettier": "^3.7.4",
    "typescript": "^5",
    "typescript-eslint": "^8.50.0"
  },
  "manifest": {
    "host_permissions": [
      "http://*/*",
      "https://*/*"
    ],
    "permissions": [
      "debugger",
      "tabs",
      "windows",
      "downloads",
      "tabGroups",
      "storage",
      "scripting"
    ],
    "externally_connectable": {
      "matches": [
        "http://localhost:3000/*",
        "http://127.0.0.1:3000/*"
      ]
    }
  }
}
