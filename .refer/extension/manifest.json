{
  "manifest_version": 3,
  "name": "Mimo Control Driver",
  "version": "0.0.1",
  "description": "ControlServer/WebApp bridge to chrome.debugger (CDP) with JWS verification.",
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_title": "Mimo Control Driver",
    "default_popup": "popup.html"
  },
  "permissions": ["debugger", "storage", "tabs", "notifications"],
  "host_permissions": ["http://localhost/*", "https://localhost/*", "https://*/*"],
  "externally_connectable": {
    "matches": ["http://localhost/*", "https://localhost/*", "https://*/*"]
  }
}


