{
  "name": "mimorepo",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "./kill-ports.sh && turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "sources:sync": "tsx .sources/sources-sync.ts",
    "sources:sync:force": "tsx .sources/sources-sync.ts --force"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@types/node": "^25.2.0",
    "prettier": "^3.7.4",
    "tailwindcss": "^4",
    "tsx": "^4.21.0",
    "turbo": "^2.7.3",
    "typescript": "5.9.2",
    "yaml": "^2.8.2"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  }
}
