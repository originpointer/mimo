{
  "name": "@repo/ui",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.mts",
      "import": "./dist/index.mjs"
    },
    "./components/*": {
      "types": "./dist/components/*.d.mts",
      "import": "./dist/components/*.mjs"
    },
    "./lib/*": {
      "types": "./dist/lib/*.d.mts",
      "import": "./dist/lib/*.mjs"
    },
    "./styles/*": "./src/styles/*"
  },
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch"
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "tailwind-merge": "^3.4.0"
  },
  "devDependencies": {
    "@repo/typescript-config": "workspace:*",
    "tsdown": "^0.20.0-beta.2",
    "typescript": "^5.9.2"
  },
  "peerDependencies": {
    "react": "^19",
    "react-dom": "^19"
  }
}
